<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:elevation="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="10dp"
            android:scaleType="fitCenter"
            android:padding="14dp"
            android:id="@+id/statusImageLevel"
            />

        <TextView
            android:id="@+id/statusTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="@string/status_title"
            style="@style/MyCustomTextViewHeaderTitle"
            />

        <TextView
            android:id="@+id/statusSubTitle"
            android:layout_below="@+id/statusTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="@string/headerSubTitleApproved"
            style="@style/MyCustomTextViewHeaderSubtitle"
            />

        <Button
            android:id="@+id/statusBtn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:backgroundTint="@color/white"
            android:text="@string/status_btn"
            android:textColor="@color/orange"
            android:layout_marginStart="10dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="3dp"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>